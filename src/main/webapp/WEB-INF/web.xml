<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<!-- 初始化  读取server-config.xml 触发其它组件的initial事件 -->
	<servlet>
		<servlet-name>EsbServerInitial</servlet-name>
		<servlet-class>com.poweruniverse.nim.esb.servlet.EsbServerInitial</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<!-- nsb模块 http请求处理
		接受客户端http请求 分发至适当的webservice服务 -->
	<servlet>
		<servlet-name>httpDispather</servlet-name>
		<servlet-class>com.poweruniverse.nim.esb.servlet.HTTPRequestDispatcher</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>httpDispather</servlet-name>
		<url-pattern>/jservice/</url-pattern>
	</servlet-mapping>
	
	<!-- 默认首页 -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
	<!-- 监听客户端请求 记录在线及已登录用户数量 -->
	<listener>  
        <listener-class>com.poweruniverse.nim.listener.SessionListener</listener-class>  
    </listener>
    
	<!-- 会话30分钟超时 -->
    <session-config>  
        <session-timeout>30</session-timeout>  
    </session-config>  
</web-app>



